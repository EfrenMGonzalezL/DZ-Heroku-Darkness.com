                            <textarea type="text" name="message" class="form-control" placeholder="Envianos un mensaje" rows="10"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="form-control btn btn-primary ">
                                Enviar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>